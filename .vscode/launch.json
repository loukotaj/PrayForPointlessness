{
    // .vscode/launch.json
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Run Game (main.py)",
        "type": "python",
        "request": "launch",
  
        // ðŸ‘‰ point to your entryâ€‘file
        "program": "${workspaceFolder}/main.py",
  
        // optional: "console": "integratedTerminal" | "externalTerminal"
        "console": "integratedTerminal",
  
        // Show full traceback on crashes
        "justMyCode": false,
  
        // If you need envâ€‘vars (e.g., SDL video tweaks)
        "env": {
          "PYGAME_HIDE_SUPPORT_PROMPT": "1"
        }
      }
    ]
  }
  